<% include ./partials/header.ejs %>
<div class="w-full h-full bg-zinc-800 text-center ">
<h1 class="text-white">Create a new post</h1>
<hr class="opacity-10 mt-3">
<form action="/createPost" method="post" class="mt-3 flex items-center justify-center flex-col" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-2" type="file" name="postImage" id="">
    <input class="block w-1/3 px-3 py-2 border-2 mt-2 rounder-md" type="text" placeholder="Title" name="title" id="">
    <textarea class="block w-1/3 px-3 py-2 border-2 mt-2 rounder-md h-60" type="text" placeholder="Description" name="description" id=""></textarea>
    <input class="block w-1/3 px-3 py-2  mt-2 rounder-md bg-red-700" type="submit" name="" id="" value="Create Post">
</form>
</div>
