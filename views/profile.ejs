<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form action="/uploadfile" hidden id="uploadform" method="post" enctype="multipart/form-data">
        <input type="file" name="file" id="">
    </form>
    <div class="profdets flex flex-col items-center mt-20">
    <div class="relative">
        <span id="uploadicon" class="w-10 h-10 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200" >
            <i class="ri-pencil-fill text-zinc-800"></i>
        </span>
           <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads<%= user.profileImage  %>" alt="">
           </div>
    </div>
        <h1 class="text-3xl font-semibold mt-5">name</h1>
        <h3 class="text-md">@username</h3>
        <div class="flex gap-10">
            <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold">Edit</a>
            <a href="/edit" class="mt-5 px-7 py-2 bg-blue-700 rounded-full text-xs font-semibold">Add New Post</a>     
            <a href="/logout" class="mt-5 px-7 py-2 bg-red-600 rounded-full text-xs font-semibold">Logout</a>
        </div>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg">
                <img class="w-full h-full object-cover overflow-hidden rounded-lg" src="https://imgs.search.brave.com/fL8ChjiUR629tMvRdfyB3ST2i2M49ox_6X8JTSxYptY/rs:fit:500:0:0/g:ce/aHR0cHM6Ly9tZWRp/YS5kZWZlbnNlLmdv/di8yMDIzL09jdC8y/NC8yMDAzMzc5MTA4/LzEzMDAvNzAwLzAv/MjMxMDIzLUYtUE02/NDUtMjY1Mi5KUEc" alt="">
            </div>
            <h3 class="text-xl font-semibold mt-3">All Pins</h3>
            <h5 class="text-sm font-semibold">28 Pins</h5>
        </div>
    </div>
</div>
<script>
    document.querySelector('#uploadicon').addEventListener("click",function(){
        document.querySelector("#uploadform input").click();
    })

   document.querySelector("#uploadform input").addEventListener("change",function(){
        document.querySelector("#uploadform").submit();
    })


</script>
