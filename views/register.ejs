<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
<div class="w-[28vw] h-[70vh] bg-white px-20 py-20 rounded-[30px]">
  <h1 class="text-3xl leading-none text-center tracking-tight capitalize font-semibold text-zinc-700">Create An Account</h1>
  <form action="/register" method="post">
    <input class="block border-2 rounded-md  w-full px-3 py-2 mt-2" type="text" name="username" placeholder="username">
    <input class="block border-2 rounded-md  w-full px-3 py-2 mt-2" type="email" name="email" placeholder="email">
    <input class="block border-2 rounded-md  w-full px-3 py-2 mt-2" type="number" name="contact" placeholder="contact">
    <input class="block border-2 rounded-md w-full px-3 py-2 mt-2" type="password" name="password" placeholder="password">
    <a href="" class="mt-2 inline-block font-semibold text-zinc-500">Forgotten your password?</a>
    <input class="block border-2  w-full px-3 py-2 bg-red-600 text-white rounded-full mt-2" type="submit" value="Login">
  </form>
  <a href="/login" class="mt-2 px-2  w-full h-[6vh] text-white flex justify-center inline-block  w-full text-center  capitalize bg-red-600 rounded-full"> Sign-in</a>
</div>
</div>
<% include ./partials/footer.ejs %>