<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800">
    <h1 class="text-center text-white font-semibold">Posts</h1>
    <div class="cards flex flex-wrap gap-10 text-white px-4 py-8">
        <% user.posts.forEach(function(data){ %>
<div class="card w-32">
            <div class="card w-full h-40 bg-sky-200 overflow-hidden rounded-lg">
                <img src="/images/uploads/<%= data.image  %>" class="w-full h-full object-cover" alt="">
            </div>
            <h5 class="mt-2 text-sm"><%= data.title  %></h5>
        </div>
   <% }) %>
    </div>
</div>

<% include ./partials/footer.ejs %>